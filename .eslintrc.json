{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true,
		"mongo": true
	},
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "logger": "readonly",
      "reqlib": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
          2, "tab"
            // "error",
            // "tab",
            // { "SwitchCase": 1 }
        ],
        "linebreak-style": 0,
        "quotes": [
            "error",
            "single"
        ]
    }
}